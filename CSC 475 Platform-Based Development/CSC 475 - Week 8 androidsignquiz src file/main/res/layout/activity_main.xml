<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidsignquiz.MainActivity"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/introText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout" />

    <ImageView
        android:id="@+id/bike"
        android:layout_width="119dp"
        android:layout_height="86dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/introText"
        android:src="@drawable/bike_lane"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/yield"
        android:layout_width="119dp"
        android:layout_height="86dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bike"
        android:src="@drawable/yield_to_pedestrians"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/school"
        android:layout_width="119dp"
        android:layout_height="86dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/yield"
        android:src="@drawable/end_school_speed_limit"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/horses"
        android:layout_width="119dp"
        android:layout_height="86dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/school"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/answerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/button1"
        style="@style/Widget.AppCompat.Button"
        android:text="@string/button1"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:textColor="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="143dp"
        android:elevation="4dp"
        android:text="@string/button2"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="100dp"
        android:elevation="4dp"
        android:text="@string/button3"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/button4"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="208dp"
        android:elevation="4dp"
        android:text="@string/button4"
        android:textColor="@color/colorPrimaryDark" />
</RelativeLayout>
